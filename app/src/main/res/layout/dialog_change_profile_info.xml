<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogProfile"
    android:background="@drawable/background_dialog_removerquest"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageMain"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:contentDescription="@string/app_name"
        android:src="#FBA68A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/font_regular"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="@id/imageMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageMain"
        app:layout_constraintTop_toTopOf="@id/imageMain"/>

    <EditText
        android:id="@+id/dialogOldPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@null"
        android:gravity="center_vertical|start"
        android:textStyle="bold"
        android:fontFamily="@font/font_regular"
        android:inputType="textPassword"
        android:includeFontPadding="false"
        android:textSize="@dimen/_12ssp"
        android:textColor="#000"
        android:padding="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/title_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title_dialog"/>

    <EditText
        android:id="@+id/dialogNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@null"
        android:gravity="center_vertical|start"
        android:textStyle="bold"
        android:fontFamily="@font/font_regular"
        android:inputType="textPassword"
        android:includeFontPadding="false"
        android:textSize="@dimen/_12ssp"
        android:textColor="#000"
        android:padding="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/dialogOldPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title_dialog"/>

    <TextView
        android:id="@+id/Update_dialog_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/font_regular"
        android:layout_marginTop="@dimen/_3sdp"
        android:includeFontPadding="false"
        android:padding="@dimen/_8sdp"
        android:textColor="#112DC8"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogNewPassword"/>

    <TextView
        android:id="@+id/Cancel_dialog_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/font_regular"
        android:includeFontPadding="false"
        android:padding="@dimen/_8sdp"
        android:textColor="#112DC8"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Update_dialog_profile"
        app:layout_constraintTop_toTopOf="@id/Update_dialog_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>