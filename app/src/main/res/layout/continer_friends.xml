<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/RootLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp">

        <TextView
            android:id="@+id/imageTextContiner"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/font_regular"
            android:textAllCaps="true"
            android:textColor="@color/color_icon"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:includeFontPadding="false"
            android:background="@drawable/background_imagetext"
            android:visibility="gone"
            android:elevation="@dimen/_3sdp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagePhotoContiner"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:elevation="@dimen/_3sdp"
            android:visibility="gone"
            android:src="#00FFFFFF"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="@dimen/_1sdp"/>


        <TextView
            android:id="@+id/FriendNameContiner"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/font_regular"
            android:includeFontPadding="false"
            android:textColor="#000000"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/CallVoice"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/ic_voice_call"
                android:scaleType="fitXY"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                android:elevation="@dimen/_4sdp"/>

            <ImageView
                android:id="@+id/CallVideo"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:elevation="@dimen/_4sdp"
                android:src="@drawable/ic_video_call"
                android:scaleType="fitXY"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/StatusFriendContiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/font_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:visibility="visible"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="@dimen/_45sdp"
        android:elevation="@dimen/_3sdp"/>

</LinearLayout>