<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearRequests"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/imageTextItem"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:textSize="@dimen/_22ssp"
        android:fontFamily="@font/font_regular"
        android:textAllCaps="true"
        android:textColor="@color/color_icon"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:includeFontPadding="false"
        android:background="@drawable/background_imagetext"
        android:visibility="gone"
        android:elevation="@dimen/_3sdp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagePhotoItem"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:elevation="@dimen/_3sdp"
        android:visibility="gone"
        android:src="#00FFFFFF"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="@dimen/_1sdp"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="@dimen/_7sdp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/FriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/font_regular"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DateSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/font_regular"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:textColor="#959191"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/_5sdp"
            android:gravity="center">


            <TextView
                android:id="@+id/acceptRequests"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12ssp"
                android:gravity="center"
                android:fontFamily="@font/font_regular"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:visibility="gone"
                android:background="@drawable/accept_button"
                android:text="@string/accept" />

            <TextView
                android:id="@+id/cancelRequests"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12ssp"
                android:gravity="center"
                android:fontFamily="@font/font_regular"
                android:textStyle="bold"
                android:visibility="gone"
                android:includeFontPadding="false"
                android:background="@drawable/cancel_button"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>